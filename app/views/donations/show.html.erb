<p><strong>Amount: </strong><%= number_to_currency@donation.amount %>
</p>
<p><strong>Donor: </strong><%= @donation.user.username.titleize %>
</p>
<% if @donation.anonymous? %>
<p>
  <strong><%= @donation.user.username.titleize %> wishes to be listed as  anonymous in St. Paul's Pathway.</strong>
</p>
<% end %>

<%= link_to 'Edit', edit_donation_path(@donation) %>


<script src="https://js.stripe.com/v3/"></script>

<form action="/charge" method="post" id="payment-form">
  <div class="form-row">
    <label for="card-element">
      Credit or debit card
    </label>
    <div id="card-element">
      <!-- A Stripe Element will be inserted here. -->
    </div>

    <!-- Used to display form errors. -->
    <div id="card-errors" role="alert"></div>
  </div>

  <button>Submit Payment</button>
</form>
