<div class="mt100"></div>
<div class="row">
  <div class="col-md-6 offset-md-3">
      <%= cl_image_tag(("BillyDawnWeb_wd4get"), width: "70%",
      class: "image-center") %>

    <h1><%= @event.title %></h1>
    <p><%= @event.date.strftime('%A, %B %e, %Y') %>,
      <%= number_to_currency @event.price*0.01 %> per ticket. </p>
      <%= bootstrap_form_for([@event, @ticket]) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.hidden_field :price, :value => @event.price %>
        <%= f.hidden_field :event_id, :value => @event.id %>
        <%= f.input :first_name %> &nbsp;<%= f.input :last_name %> <br>
        <%= f.input :quantity, label: "Number of tickets" %>
      </div>
      <div class="honey">
        <%= f.input :honey %>
      </div>
      <div class="form-actions">
        <%= f.button :submit,  "Create order", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
