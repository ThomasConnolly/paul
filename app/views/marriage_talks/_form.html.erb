<div class="row">
  <div class="col-md-10 col-md-offset-1">

    <div class="example">
      <%= simple_form_for @marriage_talk, html: { multipart: true } do |f| %>
        <div class="form-group">
          <%= f.input :title, class: 'form-control' %>
            <%= f.date_select :delivered_on, data: { controller: "datepicker" } %>%>
              <div id="summernote">
                <%= f.input :body, as: :ckeditor %>
              </div>
              <%= f.submit "Submit"  %>
                <% end %>
        </div>
    </div>

  </div>
</div>

