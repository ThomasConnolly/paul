<h3>Click browse to search your computer for a photo</h3>
  <% if current_user.avatar.present? %>
    <%= cl_image_tag(current_user.avatar.path, { size: '300x300', 
      crop: :fill, class: "floatleft" }) %>
    <% else %>
  <div class="big-avatar-missing">
    <h4>Your<br>Photo<br>Here</h4>
  </div>
  <% end %>
  

<%= simple_form_for(@user, html: { class: "form-horizontal", :multipart => true, method: :put }) do |f| %>
  <%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :avatar, as: :attachinary %>
  <%= f.button :submit, "Submit", class: "btn btn-primary" %>
</div>
<% end %>
