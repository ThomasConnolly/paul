<fieldset>
  <%= f.label :content, "Question" %>
  <%= f.text_area :content %>
  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", '#', class: "remove_fields" %>

  <%= f.fields_for :answers do |answers_for_form| %>
    <%= render 'answer_fields', f: answers_for_form %>
  <% end %>
  <%= link_to_add_fields "Add answer", f, :answers %>
</fieldset>