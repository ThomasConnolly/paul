<p id="notice"><%= notice %></p>

<h1>Surveys</h1>

<table>
  <thead>
    <tr>
      <th>Q1</th>
      <th>Q2</th>
      <th>Q3</th>
      <th>A1</th>
      <th>A2</th>
      <th>A3</th>
      <th>Added comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.q1 %></td>
        <td><%= survey.q2 %></td>
        <td><%= survey.q3 %></td>
        <td><%= survey.a1 %></td>
        <td><%= survey.a2 %></td>
        <td><%= survey.a3 %></td>
        <td><%= survey.added_comments %></td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

