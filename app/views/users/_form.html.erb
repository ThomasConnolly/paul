<div class="mt-5"></div>
  <div class="row">
    <div class="col-md-4 offset-md-4">
     <% if current_user.avatar? %>
      <%= image_tag(current_user.avatar, size: '240x350', class: 'image-center') %>
      <% else %>
      <div class="border text-center">
      <h4>Your<br>Photo<br>Here</h4>
      </div>
      <br>
      <% end %>
    <p class="text-center"><strong> <em>"Choose file"</em> from your computer, then submit</strong></p>
   
<%= bootstrap_form_for(@user) do |f| %>
  <%= f.file_field :avatar, direct_upload: true %>
  <%= f.submit "upload", class: "btn btn-primary"%> &nbsp;
  <%= link_to "cancel", :back, class: "btn btn-danger" %><br>
<% end %>
<div class="mt50"></div>
    </div>
  </div>
  