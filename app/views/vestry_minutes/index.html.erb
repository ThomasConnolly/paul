<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <div class="mt30"></div>
      <h1>Vestry Minutes</h1>
        <% @vestry_minutes.each do |vestry_minute| %>
          <p><strong>Meeting date:
          <%= vestry_minute.date.strftime("%B %d, %Y") %> &nbsp; </strong></p>
          <p><small><%= link_to 'Show', vestry_minute %>&nbsp; 
          
            <% if current_user && current_user.admin? %>
            | <%= link_to 'Edit', edit_vestry_minute_path(vestry_minute) %> | 
              <%= link_to 'Destroy', vestry_minute, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
        <div class="mt30"></div>
          <% if current_user && current_user.admin? %> 
            <%= link_to 'New entry', new_vestry_minute_path %>
          <% end %>
          </small></p>
          <% end %>
    </div>
  </div>
</div>
