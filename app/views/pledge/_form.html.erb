<%= bootstrap_form_with(model: @pledge, local: true) do |f| %>
  <%= f.form_group :plan, label: { text: "Frequency" } do %>
  <%= f.radio_button :plan, "weekly", label: "Weekly", inline: true %>
  <%= f.radio_button :plan, "monthly", label: "Monthly", inline: true %>
  <%= f.radio_button :plan, "quarterly", label: "Quarterly", inline: true %>
  <% end %>
  <%= f.number_field :amount, prepend: "$", append: ".00" %>
<%= f.submit "Set up", class: "btn btn-success btn-lg mb-5" %>
<% end %> 
