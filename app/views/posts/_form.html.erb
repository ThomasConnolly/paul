
<%= simple_form_for @post do |f| %>
  <%= f.input :content, autofocus: true %>
  <br>
  <%= f.input :post_picture, as: :attachinary, label: "Upload a picture", label_html: {  class: "btn btn-primary btn-xs" } -%> &nbsp; 
  <%= f.input :photos, as: :attachinary, label: 'Upload up to four pictures', label_html: {  class: "btn btn-primary btn-xs" } %>
 
  <%= f.submit "Submit", class: "btn btn-primary btn-xs" %> &nbsp; 
  <%= link_to "Cancel", :back, class: "btn btn-danger btn-xs" %>
<% end %>

