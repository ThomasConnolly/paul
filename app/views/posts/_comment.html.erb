<% if @post.comments.length > 0 %>
  <% @post.comments.each do |comment| %>
    <p><%= comment.author.titlecase unless comment.author.blank? %>:: <%= comment.body %></p>
    <% end %>
  <% else %>
    <p><small> No comments have been posted yet </small></p>
    <% end %>
<% if @comment.author == current_user %>
  <p class="owner-edit-links">
    <%= link_to 'Delete this comment', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %> </p> 
<% end %>

 
