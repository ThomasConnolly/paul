<div class="page">
<%= render 'layouts/header' %>
<div class="sermon-page">

<h1>Listing homilists</h1>

<table class="table table-striped">
 
    <% @homilists.each do |homilist| %>
      <tr>
       <p> <td><%= homilist.name %></td>
        <td><%= homilist.title %></td>
        <td><%= link_to 'Edit', edit_admin_homilist_path(homilist), class: 'btn btn-primary' %>   
       <%= link_to 'Destroy', admin_homilist_path(homilist), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </p> </tr>
    <% end %>
 
</table>

<br>

<%= link_to 'Add a new preacher', new_admin_homilist_path, class: 'btn btn-success pull-right' %>

</div></div>

