<div class="row">
  <div class="col col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<%= simple_form_for(@pledge, url: pledge_path) do |f| %>
  <%= f.error_notification %>
    <div>
      <h2>Your annual pledge:</h2>
        <%= f.input :amount, input_html: {id: "pledgeAmount"}, placeholder: "Amount in whole dollars" %><br>
    </div> 
    <div>   
      <h3>Payments will be made:</h3>
        <%= f.input :divisor, collection: [["Weekly", 52], ["Monthly", 12], 
        ["Quarterly", 4]], as: :radio_buttons, label: false, input_html: {id: "divisor"} %><br>
        <%= f.button :submit, "Calculate payment", class: "btn btn-primary" %> &nbsp; <%= link_to "Cancel", root_path, class: "btn btn-danger" %>
    </div>
<% end %>
<div class="mt100"></div>
  </div>
</div> 