<p id="notice"><%= notice %></p>

<h1>Listing Meditations</h1>

    <% @meditations.each do |meditation| %>
        <p><%= meditation.publish_on.strftime("%B %-d, %Y") %> </p>
        <p><strong><%= meditation.title %></strong></p>
        <p><%= meditation.name %> </p>
        <p><%= raw meditation.body %></p>
        <p><em><%= meditation.scripture %></p>
        <p><strong><%= meditation.prayer %> </strong></p>
        <p><%= link_to 'Show', meditation %> | 
        <%= link_to 'Edit', edit_meditation_path(meditation) %> | 
        <%= link_to 'Destroy', meditation, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      <div class="mt30"></div>
    <% end %>

<br>
<%= render "count" %>

<%= link_to 'New Meditation', new_meditation_path %>
