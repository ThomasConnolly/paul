<%= simple_form_for @vestry_minute, html: { multipart: true } do |f| %>

  <div class="form-group">
    <%= f.date_select :date, :class => 'datepicker' %><br>
    <%= f.input :minutes, as: :ckeditor, :input_html => { :ckeditor => { :toolbar => "MyToolbar" }}%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create", class: "btn btn-primary" %>
  </div>
<% end %>

<script>
$(document).on('page:load', function() {
  window['rangy'].initialized = false
  });
</script>