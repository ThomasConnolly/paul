<h2>Log in</h2>

<%= form_with(model: resource, as: resource_name, url: session_path(resource_name),
              method: :post, data: { turbo: false }) do |f| %>

  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>

<div class="form-inputs">
  <div>
    <%# Devise uses 'login' as a virtual attribute if you allow login with username or email %>
    <%# If you only allow login with email, use f.label :email and f.email_field :email %>
    <%= f.label :email %><br />
    <%= f.email_field :login, required: true, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password, required: true, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
</div>

  <div class="form-actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

