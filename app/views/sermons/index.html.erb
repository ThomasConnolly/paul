<div class="page">
<%= render 'layouts/publicHeader' %>
<div class="sermon-page">

<h1>Sermons from St. Paul's pulpit </h1>

<table class="table table-condensed">
  <tbody>
    <% @sermons.each do |sermon| %>
      <tr>
        <td class="col-md-3"><%= sermon.delivered_on.strftime("%b %d, %Y") %></td> 
        <td class="col-md-5"><%= sermon.homilist.name %></td> 
        <td class="col-md-4"><%= link_to sermon.title, sermon %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>

<%= render "layouts/footer" %>