
  <h1>Listing books</h1>
    
      <table class="table table-striped">
        <tr>
          <th>Author</th>
          <th>Title</th>
          <th>Subject</th>
          <th>Dewey</th>
        </tr>
        <tbody>
          <td><%= @book.author %></td>
          <td><%= @book.title %></td>
          <td><%= @book.subject %></td>
          <td><%= @book.dewey %></td>
          <td><%= link_to 'Show', book_path(@book) %></td>
            <% if current_user && current_user.has_role?(:admin) %>
          <td><%= link_to ' | Edit', edit_book_path(@book) %></td>
          <td><%= link_to ' | Delete', @book, method: :delete, data: { confirm: 'Are you sure?' } %></td><br>
            <% end %> 
             </tbody> 
         <% end %> 
       
      </table>

      <% if current_user && current_user.has_role?(:admin) %>
        <p><strong><%= link_to 'Add a book', new_book_path %></strong></p>
      <% end %>  
        <div class="mt30"></div>
  
      <% if current_user && current_user.has_role?(:admin) %>  
      <h4>Import data</h4>
        <%= simple_form_for @import, url: import_books_path, multipart: true do |f|%>
          <% if @import.errors.any? %>
          <div class="alert alert-error">
        <% @import.errors.full_messages.each do |msg| %>
          <div><%= msg %> </div>
        <% end %>
        <% end %>
        <%= f.file_field :file %>
        <%= f.submit  "Upload books" %>
      <% end %>
      <% end %>



     