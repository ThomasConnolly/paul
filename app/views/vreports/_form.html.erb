<%= simple_form_for @vreport do |f| %>
  <%= f.input :title, autofocus:true %><br>
  <%= f.input :body, as: :ckeditor, :input_html =>  { :toolbar => "body" }%>
  
  <div class="submit-post">
   <%= f.submit "Submit", class: "btn btn-primary btn-xs" %> &nbsp; 
   <%= link_to "Cancel", :back, class: "btn btn-danger btn-xs" %>
  </div>
<% end %>



<script>
$(document).on('page:load', function() {
  window['rangy'].initialized = false
  });
</script>