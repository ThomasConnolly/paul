<%= bootstrap_form_with(model: @pledge) do |f| %>
  <%= f.number_field :dollars, label: "Dollar amount" %>
    <%= f.form_group :plan, label: { text: "Frequency" } do %>
      <%= f.radio_button :plan, 0 , label: "Weekly" inline: true %>
        <%= f.radio_button :plan, 1 , label: "Monthly" inline: true %>
          <%= f.radio_button :plan, 2 , label: "Quarterly" inline: true %>
            <% end %>
              <%= f.submit "Next" , class: "btn btn-lg btn-success mb-2" %>
                <% end %>