<div class="row">
  <div class="col col-sm-6 col-sm-offset-3">

  <%= bootstrap_form_for(@event) do |f| %>
   <%= f.alert_message "Please fix the errors below." %>

    <div class="form-group form-inputs">
      <%= f.text_field :title %>
      <%= f.text_field :price, label: "Price in pennies per ticket. $21.00 would be input as 2100" %>
      <%= f.date_field :date, data: { behavior: "flatpickr" } %>
      <%= f.text_field :time, placeholder: "Time of event, eg., 7:30 p.m." %>
      <%= f.url_field :url, label: "Add a picture for this event" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
   
  </div>
</div>
