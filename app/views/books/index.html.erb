
  <h1>Listing books</h1>
    <table class="table table-striped">
      <th>
        <tr>
          <th>Author</th>
          <th>Title</th>
          <th>Dewey</th>
        </tr>
      </th>
      <tr>
        <% @books.each do |book| %>
          <td><%= book.author %></td>
          <td><%= book.title %></td>
          <td><%= book.dewey %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      </table>
    <% end %>

<hr>

<%= link_to 'New Book', new_book_path %>



