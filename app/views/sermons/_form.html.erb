
<div class="row">
  <div class="col-md-12">
  
    <%= bootstrap_form_with(model: @sermon) do |f| %>

    <%= f.collection_select :homilist_id, Homilist.all, :id, :name, include_blank: true, label: 'Homilist' %>

    <%= f.text_field :title %>
  
    <%= f.date_field :delivered_on, data: { behavior: "flatpickr" } %>
    
    <%= f.text_field :cites %>
 
    <%= f.rich_text_area :content %>

    <%= f.text_area :sermon_body if :sermon_body %>

    <%= f.text_field :audio %>
  
    <%= f.submit class: 'btn btn-primary' %>
    <% end %>
    
  </div>
</div>
