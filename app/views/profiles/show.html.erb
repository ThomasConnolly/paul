<div class="col-md-4 offset-md4 text-center"> 
<h1><%= @profile.user.username.titleize  %></h1>
  <% if @profile.user.avatar.attached? %>
    <%= image_tag @profile.user.avatar, width: "100%", class: "center" %>
  <% end %>
  <p><% if current_user == @profile.user %>
    <%= link_to 'Add or change your profile picture', edit_user_path(current_user) %>
    <%= link_to ' | Edit your profile', edit_profile_path(@profile) %> | 
    <%= link_to 'Delete', profile_path(@profile), method: :delete, data: { confirm: 'This will delete your profile.' } %> 
  <% end %></p>
</div>
  <div class="clearall"></div>
