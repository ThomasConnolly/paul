<div class="mt50"></div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
     <% if current_user.avatar? %>
      <%= cl_image_tag(current_user.avatar.path, size: '240x350', class: 'image-center') %>
      <% else %>
      <div class="border text-center">
      <h4>Your<br>Photo<br>Here</h4>
      </div>
      <br>
      <% end %>
    <p class="text-center"><strong> <em>"Choose file"</em> from your computer, then submit</strong></p>
   
<%= bootstrap_form_for(@user) do |f| %>
  <%= f.text_field :avatar, as: :attachinary %>
  <%= f.button :submit, "Submit", class: "btn btn-primary" %> &nbsp;
  <%= link_to "Cancel", :back, class: "btn btn-danger" %><br>
<% end %>
<div class="mt50"></div>
    </div>
  </div>
