<div class="page">
  <%= render 'layouts/header' %>
<div class="main_body">

<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Subject</th>
      <th>Isbn</th>
      <th>Dewey</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.author %></td>
        <td><%= book.title %></td>
        <td><%= book.subject %></td>
        <td><%= book.isbn %></td>
        <td><%= book.dewey %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<%= link_to 'New Book', new_book_path %>
<%= render "layouts/footer" %>