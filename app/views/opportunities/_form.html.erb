<%= simple_form_for @opportunity do |f| %>
<%= f.input :ministry %>
<%= f.input :who %>
<%= f.input :what %>
<%= f.input :when %>
<%= f.input :where %>
<%= f.select :user_id, User.all.collect { |u| [u.full_name, u.id] } %>
<%= f.button :submit %>
<% end %>
<%= link_to "<< Back", opportunities_path %>
