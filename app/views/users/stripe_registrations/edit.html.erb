<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: "we'll need your current password to make any changes", required: true %>
  </div>
  <div>
    <h3>Add or replace your profile picture</h3> <br />
    <div class="form-group">
      <%= f.attachinary_file_field :avatar %> <br /><br />
  <div class="form-group">
    <%= f.submit "Upload", class: "btn btn-primary" %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<%= link_to '<<Back', posts_path %>
<br><br>


<hr>
<h3>Cancel this account</h3>

<p>Leaving the St. Paul's community? <%= link_to "Cancel my account", registration_path(resource_name), class: 'btn btn-danger', data: { confirm: "Are you sure? This will destroy all of your information, including posts, photos and comments." }, method: :delete %></p>

</div></div>