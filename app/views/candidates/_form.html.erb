<%= simple_form_for(@candidate) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :last_name %>
    <%= f.input :full_name %>
    <%= f.input :link1 %>
    <%= f.input :link2 %>
    <%= f.input :link3 %>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
