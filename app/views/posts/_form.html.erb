<%= bootstrap_form_with(model: @post) do |f| %>
  <%= f.file_field :picture, direct_upload: true %>
  <%= f.file_field :photos, direct_upload: true, multiple: true %>
  <%= f.rich_text_area :content, placeholder: "Type your post here." %>
  <%= f.submit %> &nbsp; <%= link_to "Cancel" , :back, class: "btn btn-danger" %>
<% end %>
