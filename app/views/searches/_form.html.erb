<%= simple_form_for(@characteristic) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :definition %>
    <%= f.input :ranking, as: :radio_buttons, collection:
    [['1', 'not important'], ['2', 'important'], ['3', 'very important'], 
    ['4', 'essential']] %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
