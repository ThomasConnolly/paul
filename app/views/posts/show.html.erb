<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>Here's the post</h1>
      <p class="list">By <%= @post.user.username.titleize %>, <%=  @post.created_at.strftime("%b %d, %Y") %></p>

        <% if @post.picture.present? %>
        <%= link_to image_tag(@post.picture,  
      :height => 450, :crop => :fit)%>
        <% end %>
        
    <%= @post.content %>
    <% if user_signed_in? && current_user == @post.user %>
      <p><small><%= link_to "Edit", edit_post_path(@post) %> </small></p>
      <% end %>
      <h3>Comments</h3>
        <%= render partial: "comments/form", locals: { commentable: @post } %>
        <%= render @post.comments.where(parent_id: @post) %>
        <div class="mt-5"></div>



        <%= link_to "<< Back to all posts", posts_path %>
    </div>
</div>