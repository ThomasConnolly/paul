
<%= simple_form_for(@pledger) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :last_name %>
    <%= f.input :salutation %>
    <%= f.input :address1 %>
    <%= f.input :address2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :postal_code %>
    <%= f.input :type %>
    <%= f.input :northern_city %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
