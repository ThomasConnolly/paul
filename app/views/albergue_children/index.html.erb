<p id="notice"><%= notice %></p>

<h1>Albergue Children</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Avatar</th>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albergue_children.each do |albergue_child| %>
      <tr>
        <td><%= albergue_child.first_name %></td>
        <td><%= albergue_child.last_name %></td>
        <td><%= albergue_child.avatar %></td>
        <td><%= albergue_child.birthday %></td>
        <td><%= link_to 'Show', albergue_child %></td>
        <td><%= link_to 'Edit', edit_albergue_child_path(albergue_child) %></td>
        <td><%= link_to 'Destroy', albergue_child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

