<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Log in</h2>
      <h3>You must be registered to log in</h3>
      <%=link_to "Click to register", new_user_registration_path %>
      <div class="mt30"></div>
     


      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <div class="form-inputs">
          <%= f.input :login, placeholder: "Your full name" %>
          <%= f.input :password, placeholder: "Your password" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-lg btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div> 
</div>