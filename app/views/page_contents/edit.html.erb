<%= turbo_frame_tag dom_id(@page_content) do %>
  <div class="content-edit-form">
    <h2>Edit: <%= @page_content.section.titleize %></h2>
    
    <%= simple_form_for @page_content do |form| %>
      <%= form.input :title, 
                    label: 'Section Title',
                    input_html: { class: 'form-control' } %>
      
      <%= form.input   :body,
                        label: 'HTML Content',
                        as: :text,
                        input_html: { 
                          class: 'form-control',
                          rows: 15,
                          placeholder: '<h2>Your heading here</h2><p>Your content here</p>'
                        } %>
      
      <div class="form-actions mt-3">
        <%= form.button :submit, 'Save Changes', class: 'btn-primary' %>
        <%= link_to "Cancel", root_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
<% end %>