<div class="mt50"></div>
<h3>Click browse to search your computer for a photo</h3><br>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
    <% if current_user.avatar.present? %>
      <%= cl_image_tag(current_user.avatar.path, { size: '300x360', 
        crop: :fill, class: "image-center" }) %>
      <% else %>
      <div class="big-avatar-missing">
      <h4>Your<br>Photo<br>Here</h4>
      </div>
      <% end %>
    
      <div class="mt50"></div>
<%= simple_form_for(@user, html: { class: "form-horizontal", :multipart => true, method: :put }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :avatar, as: :attachinary, label: false %>
  <%= f.button :submit, "Submit", class: "btn btn-primary btn-xs" %> &nbsp;
  <%= link_to "Cancel", :back, class: "btn btn-danger btn-xs" %><br>
<% end %>
<div class="mt50"></div>
    </div>
  </div>
