<div>
  <%= bootstrap_form_for @pledge do |f| %>
   <%= f.alert_message "Please fix the errors below." %>
    <div>
      <h2>Amount of your annual giving:</h2>
        <%= f.number_field :amount, input_html: {id: "pledgeAmount"}, placeholder: "Amount in whole dollars", label: false %><br>
    </div>
    <div>
      <h2>Payments will be made:</h2>
        <%= f.form_group :divisor do %>
        <%= f.radio_button :divisor, 52, label: "Weekly", inline: true %>
        <%= f.radio_button :divisor, 12, label: "Monthly", inline: true %>
        <%= f.radio_button :divisor, 4, label: "Quarterly", inline: true %>
        <% end %>
    </div>
    <div>
      <%= f.submit "Review", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>
