<div class="container">
<h2>Here are the latest posts</h2>
  <% @posts.each do |post| %>
    <div class= "w-25 border border-secondary float-left text-center p-5 mr-3">
      <h5> Your<br>Picture<br>Here</h5><br> <p> <small> (Under construction) </small></p>
    </div>

    <div class="ml-2">
      <p class="list"><em><%= post.user.username.titleize %>::</em></p>
      <p><%= post.content %></p>
      <p> <small> Posted <%= time_ago_in_words(post.created_at) %> ago. <%= pluralize(post.comments.count, "comment") %> </small >&nbsp; 
        <%= link_to "Show", post_path(post[:id]) %> |
        <% if current_user == post.user || current_user.has_role?(:admin) %>
          <%= link_to "Edit", edit_post_path(post[:id]) %> |&nbsp;
          <%= link_to "Delete", post_path(post), 
            method: :delete, data: { confirm: "Are you sure you want to 
            delete the post?" }%> 
        <% end %></p>
    </div>
      <div class="clearfix"></div>
      <hr>
        <% end %>
      </div>
      

  
  

