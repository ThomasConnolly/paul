  <%= f.input :post_picture, as: :attachinary, label: 'Upload a single picture' %><br>
  <%= f.input :photos, as: :attachinary, label: 'Upload up to four pictures' %>
 
  <%= f.submit "submit", class: "btn btn-primary" %>
 <br>
<% end %>
