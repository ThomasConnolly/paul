
<div class="row">
  <div class="col-md-12">
<div class="example" data-no-turbolink>
  <%= simple_form_for @sermon, html: { multipart: true } do |f| %>
  
    <div class="form-group">
      <%= f.label :homilist %><br>
      <%= f.collection_select :homilist_id, Homilist.all, :id, :name, include_blank: true, label: 'Homilist' %>
      <%= f.input :title, class: 'form-control' %>
      <%= f.input :cites, label: 'Citations', class: 'form-control' %>
      <%= f.date_select :delivered_on, :id => 'datetimepicker1' %><br>
      <div id="summernote">
      <%= f.input :sermon_body, as: :ckeditor %><br>
      </div>
    
    <%= f.button :submit %>   
  <% end %>
      </div>
    </div>
<script type="text/javascript">
  $(function () {
    $('#datetimepicker1').datetimepicker();
  });
</script>
<script>
$(document).on('page:load', function(){
  window['rangy'].initialized = false
});
</script>
     
  </div>
</div>
