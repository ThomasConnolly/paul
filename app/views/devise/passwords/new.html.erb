<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

    <h2>Forgot your password?</h2>

      <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <%= devise_error_messages! %>

        <div class="form-inputs">
          <%= f.input :email,  autofocus: true, placeholder: "Your email address", label: false %><br>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Send password reset", class: "btn btn-lg btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>