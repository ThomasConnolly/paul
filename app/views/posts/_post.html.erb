<% @posts.each do |post| %>
  <% if post.user.avatar? %>
    <%= cl_image_tag(post.user.avatar.path, { size: '100x120', crop: :fill, gravity: :face,  class: "floatleft" }) %> 
  <% end %>
  <p><strong><%= post.user.full_name.titleize  %></strong>:: 
  <%= post.content %>  
    <small> Posted <%= time_ago_in_words(post.created_at) %> ago. </small></p>
  <% if current_user == post.user %><p><small>
    <%= link_to ' | Edit', edit_post_path(post) %> | 
    <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'This will delete your post and all its comments.' } %></small></p>
  <% end %> 
     </p>
  <% unless post.photo.empty? %>  
    <%= cl_image_tag(post.photo.path, { size: '200x200', crop: :fill, class: 'imageCenter'}) %>
  <% end %>
    <br>
 
    <%= link_to "Care to comment?", new_post_comment_path(post) %> 
  <% end %>
  
    
